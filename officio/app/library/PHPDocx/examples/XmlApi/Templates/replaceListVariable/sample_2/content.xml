<?xml version="1.0" encoding="UTF-8"?>
<pdx:document xmlns:pdx="http://www.phpdocx.com/main" >
    <pdx:content>
        <pdx:wordFragments>
            <pdx:wordFragment pdx:wordFragmentName="imageFragment" pdx:target="document">
                <pdx:content>
                    <pdx:addImage pdx:scaling="50">
                        <pdx:data pdx:dataId="" pdx:dataType="text">/var/www/phpdocx/examples/XmlApi/files/img/image.png</pdx:data>
                    </pdx:addImage>
                </pdx:content>
            </pdx:wordFragment>
            <pdx:wordFragment pdx:wordFragmentName="linkFragment" pdx:target="document">
                <pdx:content>
                    <pdx:addLink>
                        <pdx:linkText>
                            <pdx:data pdx:dataId="" pdx:dataType="text">Link to Google</pdx:data>
                        </pdx:linkText>
                        <pdx:linkURL>
                            <pdx:data pdx:dataId="" pdx:type="URL">http://www.google.es</pdx:data>
                        </pdx:linkURL>
                        <pdx:paragraphStyle>
                            <pdx:color pdx:value="0000FF" />
                            <pdx:underline pdx:value="single" />
                        </pdx:paragraphStyle>
                    </pdx:addLink>
                </pdx:content>
            </pdx:wordFragment>
            <pdx:wordFragment pdx:wordFragmentName="footnoteFragment" pdx:target="document">
                <pdx:content>
                    <pdx:addFootnote>
                        <pdx:textDocument>
                            <pdx:data pdx:dataId="" pdx:dataType="text">here it is</pdx:data>
                            <pdx:paragraphStyle />                        
                        </pdx:textDocument>
                        <pdx:textFootnote>
                            <pdx:data pdx:dataId="" pdx:dataType="text">This is the footnote text.</pdx:data>
                        </pdx:textFootnote>
                    </pdx:addFootnote>
                </pdx:content>
            </pdx:wordFragment>
        </pdx:wordFragments>
    </pdx:content>
    <pdx:templateVariables pdx:preprocessedTemplate="">
        <pdx:replaceListVariable pdx:variableName="LISTVAR">
            <pdx:data pdx:dataId="" pdx:type="list">
                <pdx:item pdx:depth="" pdx:dataType="wordFragment">linkFragment</pdx:item>
                <pdx:item pdx:depth="" pdx:dataType="wordFragment">imageFragment</pdx:item>
                <pdx:item pdx:depth="" pdx:dataType="wordFragment">footnoteFragment</pdx:item>
            </pdx:data>
        </pdx:replaceListVariable>
    </pdx:templateVariables>
</pdx:document>